<section class="py-4">
	<form class="signup-form" id="signup-form" autocomplete="off">
		<h2 class="signup-form__title">Sign Up</h2>
		<input class="signup-form__input" type="text" name="username" placeholder="Username" autocomplete="off"
			required="required" autofocus="autofocus" />
		<input class="signup-form__input" type="password" name="password" placeholder="Password" autocomplete="off"
			required="required" />
		<input class="signup-form__input" type="submit" value="Sign Up" id="btn-signup-form" /><span
			id="signup-form-span"></span>
	</form>
	<form class="signin-form" id="signin-form" autocomplete="off">
		<h2 class="signin-form__title">Sign In</h2>
		<input class="signin-form__input" type="text" name="username" placeholder="Username" autocomplete="off"
			required="required" autofocus="autofocus" />
		<input class="signin-form__input" type="password" name="password" placeholder="Password" autocomplete="off"
			required="required" />
		<input class="signin-form__input" type="submit" value="Sign In" id="btn-signin-form" /><span
			id="signin-form-span"></span>
	</form>
</section>

